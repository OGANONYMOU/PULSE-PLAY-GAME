{
  "name": "pulse-play",
  "version": "1.0.0",
  "private": true,
  "workspaces": ["frontend", "backend"],
  "scripts": {
    "postinstall": "cd backend && npx prisma generate",
    "dev": "npm run dev --workspace=backend",
    "build": "npm run build --workspace=backend",
    "start": "npm run start --workspace=backend",
    "db:push": "cd backend && npx prisma db push",
    "db:migrate": "cd backend && npx prisma migrate dev",
    "db:seed": "cd backend && npx tsx prisma/seed.ts",
    "db:studio": "cd backend && npx prisma studio"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
