{
  "version": 2,
  "buildCommand": "cd backend && npm install && npm run build",
  "outputDirectory": "backend/dist",
  "installCommand": "npm install --prefix backend",
  "framework": null,
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/dist/index.js"
    },
    {
      "src": "/(.*\\.(html|css|js|png|jpg|jpeg|webp|svg|ico|woff2?))",
      "dest": "frontend/$1"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
